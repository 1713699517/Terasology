{
  "type": "shortEntryPopup",
  "skin": "messageBox",
  "contents": {
    "type": "relativeLayout",
    "contents": [
      {
        "type": "UIBox",
        "layoutInfo": {
          "width": 500,
          "use-content-height": true,
          "position-horizontal-center": {},
          "position-vertical-center": {}
        },
        "content": {
          "type": "ColumnLayout",
          "columns": 1,
          "verticalSpacing": 8,
          "contents": [
            {
              "type": "UILabel",
              "id": "title",
              "family": "title"
            },
            {
              "type": "UISpace",
              "size": [
                1,
                16
              ]
            },
            {
              "type": "UILabel",
              "id": "message"
            },
            {
              "type": "UISpace",
              "size": [
                1,
                16
              ]
            },
            {
              "type": "UIText",
              "id": "nameInput"
            },
            {
              "type": "RowLayout",
              "horizontalSpacing": 4,
              "contents": [
                {
                  "type": "UIButton",
                  "id": "enterButton",
                  "text": "${engine:menu#dialog-ok}"
                },
                {
                  "type": "UIButton",
                  "id": "returnButton",
                  "text": "${engine:menu#dialog-cancel}"
                }
              ],
              "layoutInfo": {
                "width": 200,
                "position-right": {}
              }
            }
          ]
        }
      }
    ]
  }
}
